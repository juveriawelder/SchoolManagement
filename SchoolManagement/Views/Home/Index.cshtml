@{
    ViewBag.Title = "Home Page";
}
<style>
    .carousel-inner > .item > img {
        width: 100%;
        height: 500px;
    }
</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/learn-3653430_1280.jpg" alt="We Learn">
            <div class="carousel-caption">
         <span>We Learn</span>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/computer-768696_1280.jpg" alt="Never Stop Learning">
            <div class="carousel-caption">
                <span>Never Stop Learning</span>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/book-1421097_1280.jpg" alt="We Win">
            <div class="carousel-caption">
     <span> We Win</span>
            </div>
        </div>

      
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Courses</h2>
        <p>Use this option to view all course and offerings at this institution.
              </p>
        <p>
         @Html.ActionLink("Learn More", "Index", "Courses",null, new{@class="btn btn-primary"})
            </p>
      
    </div>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>

            View all Students that are enrolled  at this institution
        </p>
        @Html.ActionLink("Students", "Index", "Students",null, new{@class ="btn btn-info"})

    </div>
   
</div>